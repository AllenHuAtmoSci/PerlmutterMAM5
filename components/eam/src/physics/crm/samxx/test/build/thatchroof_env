#!/bin/bash

# source $MODULESHOME/init/bash
# module purge
# module load netcdf

unset ARCH
unset CUDA_ARCH
unset NCRMS
unset YAKL_HOME
unset YAKL_CUB_HOME

export NCHOME=${NETCDF_PATH}
export NFHOME=/usr
#export NCRMS=31
export CC=mpicc
export CXX=mpic++
export FC=mpif90
export FFLAGS="-O3 -ffree-line-length-none"
export CXXFLAGS="-O3"
export ARCH="CUDA"
export CUDA_ARCH="-arch sm_35 -O3 --use_fast_math -D__USE_CUDA__ --expt-extended-lambda --expt-relaxed-constexpr"
export YAKL_HOME="`pwd`/../../../../../../../../externals/YAKL"
export YAKL_CUB_HOME="`pwd`/../../../../../../../../externals/cub"
